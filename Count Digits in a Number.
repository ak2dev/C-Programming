//wap to perform the sum of all the digits in a given number.


    #include<stdio.h>
    int main(){
        int num, count = 0;
        // printf("Enter any number:\n");
        scanf("%d",&num);
        
        if(num==0){
            printf("%d",1);
        }
        else{
                while (num!=0)
            {
                int rem = num%10;
                // printf("%d ",rem);
                num=num/10;
                count = count + 1;
            }
            printf("%d",count);
        }
            
        
        return 0;
    }
