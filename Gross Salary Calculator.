#include <stdio.h>

int main() {
    double basic;
    if (scanf("%lf", &basic) != 1) return 0; // read basic salary (input assumed numeric)

    double hra, da;

    // apply rules (note the <= boundaries are handled exactly as in the problem)
    if (basic <= 10000.0) {
        hra = 0.20 * basic; // 20%
        da  = 0.30 * basic; // 30%
    } else if (basic <= 20000.0) {
        hra = 0.25 * basic; // 25%
        da  = 0.40 * basic; // 40%
    } else {
        hra = 0.30 * basic; // 30%
        da  = 0.50 * basic; // 50%
    }

    double gross = basic + hra + da;

    // print gross salary with 2 decimal places
    printf("%.2f\n", gross);

    return 0;
}
