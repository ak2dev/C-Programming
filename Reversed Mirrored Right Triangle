#include <stdio.h>

int main() {
    int N;
    scanf("%d", &N);
    
    // Handle edge case: if N <= 0, print nothing
    if (N <= 0) {
        return 0;
    }
    
    // Loop through each row
    for (int i = 1; i <= N; i++) {
        // Print leading spaces: N - i spaces
        for (int j = 1; j <= N - i; j++) {
            printf("  "); // Two spaces to align with star+space width
        }
        // Print stars: i stars, each followed by a space
        for (int j = 1; j <= i; j++) {
            printf("* ");
        }
        // Newline after each row
        printf("\n");
    }
    
    return 0;
}
