#include <stdio.h>

int main() {
    int N;
    scanf("%d", &N);

    for (int i = 1; i <= N; i++) {
        // Print leading spaces
        for (int s = 1; s <= N - i; s++) {
            printf("  "); // Two spaces for better centering because stars have spaces between them
        }

        // Print stars with a space after each (except last)
        for (int j = 1; j <= (2 * i - 1); j++) {
            printf("*");
            if (j != 2 * i - 1) {
                printf(" ");
            }
        }
        printf("\n");
    }

    return 0;
}
